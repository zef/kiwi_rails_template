<div class="grid_2 prefix_1">

<% form_for @user_session, :url => create_session_path do |f| %>
  <%= f.error_messages %>
  <%= f.label :login %><br />
  <%= f.text_field :login, :size => 20 %>
  <br />

  <%= f.label :password %><br />
  <%= f.password_field :password, :size => 20 %>
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me, "Remember?" %><br />
  <br />
  <%= f.submit "Login" %>
<% end %>


</div>